<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    tools:ignore="MissingClass"
    android:background="@color/bobaTea">

    <ScrollView android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView android:id="@+id/bobagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="50dp"
                android:textStyle="italic|bold"
                android:textSize="30sp"
                android:textColor="@color/bobaPearls"
                android:text="Bobagram!"/>

            <TextView android:id="@+id/email"
                android:layout_below="@id/bobagram"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="120dp"
                android:layout_marginStart="35dp"
                android:textColor="@color/bobaPearls"
                android:text="Email Address" />

            <EditText
                android:id="@+id/enterEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edit"
                android:drawableStart="@drawable/ic_email"
                android:hint="Enter email address"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:backgroundTint="@color/lycheeJelly"/>

            <TextView android:id="@+id/password"
                android:layout_below="@id/enterEmail"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="35dp"
                android:textColor="@color/bobaPearls"
                android:text="Password" />

            <EditText android:id="@+id/enterPassword"
                android:layout_below="@id/password"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/edit"
                android:drawableStart="@drawable/ic_email"
                android:inputType="textPassword"
                android:padding="8dp"
                android:hint="Enter password"
                android:backgroundTint="@color/lycheeJelly"/>

            <TextView
                android:id="@+id/forgotPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/enterPassword"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="210dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="23dp"
                android:text="Forgot Password?"
                android:gravity="center_horizontal"
                android:textColor="@color/bobaPearls"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forgotPassword"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:padding="4dp"
                android:text="@string/log_on"
                android:textAllCaps="false"
                android:textColor="@color/lycheeJelly"
                android:textSize="24sp"
                android:backgroundTint="@color/honeyBoba"/>

            <TextView
                android:id="@+id/createNewAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loginButton"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="23dp"
                android:text="Create a new account!"
                android:gravity="center_horizontal"
                android:textColor="@color/bobaPearls"
                android:textSize="17sp"
                android:textStyle="bold" />


        </RelativeLayout>
    </ScrollView>

</LinearLayout>